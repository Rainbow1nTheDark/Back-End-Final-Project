<div style="text-align: center"></div>



<h3>Add a photo to the album</h3>

<div>
    <p>{{ message }}</p>
</div>

<div style="width:400px;border:1px dashed #6495de;padding:16px;">
    <form action="/addRoom" method="POST" enctype="multipart/form-data">
        <table>
            </tr>
            <tr>
                <td>
                    <label for="city">City: </label>
                </td>
                <td>
                    <input id="city" name="city" type="text" /><br />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="description">Description: </label>
                </td>
                <td>
                    <input id="description" name="description" type="text" /><br />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="price">Price: </label>
                </td>
                <td>
                    <input id="price" name="price" type="text" /><br />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="rating">Rating: </label>
                </td>
                <td>
                    <input id="rating" name="rating" type="text" /><br />
                </td>
            </tr>

            <tr>
                <td>
                    <label for="photo">Photo: </label>
                </td>
                <td>
                    <input id="photo" name="photo" type="file" />
                </td>
            </tr>

            <tr>
                <td>
                    &nbsp;
                </td>
                <td>
                    <input type="submit" value="Submit" />
                </td>
            </tr>
    </form>
</div>