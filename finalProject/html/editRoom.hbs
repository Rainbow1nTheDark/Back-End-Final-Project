<div style="text-align: center"></div>
{{#if toChange}}
<h3>Enter values you want to change</h3>

<div style="width:400px;border:1px dashed #6495de;padding:16px;">
    <form action="/editRoom/{{hotel}}" method="POST">
        <table>
            <tr>
                <td>
                    <label for="city">City: </label>
                </td>
                <td>
                    <input id="city" name="city" type="text" /><br />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="description">Description: </label>
                </td>
                <td>
                    <input id="description" name="description" type="text" /><br />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="price">Price: </label>
                </td>
                <td>
                    <input id="price" name="price" type="text" /><br />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="rating">Rating: </label>
                </td>
                <td>
                    <input id="rating" name="rating" type="text" /><br />
                </td>
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
                <td>
                    <input type="submit" value="Submit" />
                </td>
            </tr>
    </form>
</div>
{{else}}
<div>
    <p>{{ message }}</p>
</div>
{{/if}}