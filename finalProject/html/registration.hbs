<!DOCTYPE html>
<html>

<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>AirC&C</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <link rel='stylesheet' type='text/css' media='screen' href='style.css'>
  <link rel='stylesheet' type='text/css' media='screen' href='registration.css'>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
  <script src='main.js'></script>
</head>

<body>
  <nav>
    <div class="logo">
      <img src="logo.png" alt="logo">
      <h4>AirC&C</h4>
    </div>
    <ul class="nav-links">
      <li><a href="/">Home Page</a></li>
      <li><a href="/roomListing">Room Listing page</a></li>
      <li><a href="/registration">Sign up</a></li>
      <li><a href="/login">Log in</a></li>
    </ul>
    <div class="burger">
      <div class="line1"></div>
      <div class="line2"></div>
      <div class="line3"></div>
    </div>
  </nav>
  <div class="content-wrap">
    <p class="welcomeMess">Sign Up</p>
    <p class="instr">Please fill in this form to create an account</p>
    <div class="contactForm">
      <form method="POST" action="/registration">
        <label for="email"></label>
        <input type="text" placeholder="Email address" name="email" value={{data.reqData.email}}>
        {{#if data.errors.email}}
        <div class="my-feedback">
          <strong>Warning:</strong> {{data.errors.email}}
        </div>
        {{/if}}
        <label for="userName"></label>
        <input type="text" placeholder="User Name" name="userName" value={{data.reqData.userName}}>
        {{#if data.errors.userName}}
        <div class="my-feedback">
          <strong>Warning:</strong> {{data.errors.userName}}
        </div>
        {{/if}}
        <label for="firstName"></label>
        <input type="text" placeholder="First Name" name="firstName" value={{data.reqData.firstName}}>
        {{#if data.errors.firstName}}
        <div class="my-feedback">
          <strong>Warning:</strong> {{data.errors.firstName}}
        </div>
        {{/if}}
        <label for="lastName"></label>
        <input type="text" placeholder="Last Name" name="lastName" value={{data.reqData.lastName}}>
        {{#if data.errors.lastName}}
        <div class="my-feedback">
          <strong>Warning:</strong> {{data.errors.lastName}}
        </div>
        {{/if}}
        <label for="psw"></label>
        <input type="password" placeholder="Enter Password" name="psw" value={{data.reqData.psw}}>
        {{#if data.errors.password}}
        <div class="my-feedback">
          <strong>Warning:</strong> {{data.errors.password}}
        </div>
        {{/if}}

        <input type="submit" value="Sign Up">
      </form>
    </div>
  </div>
  <div class="footer">
    <div class="ft">
      <p>&copy;Alexander Balandin 132145194</p>
      <li><a href="https://www.facebook.com/" class="fa fa-facebook"></i></a></li>
      <li><a href="https://twitter.com/" class="fa fa-twitter"></a></li>


    </div>
    <ul class="footer-links">
      <li><a href="/">Home Page</a></li>
      <li><a href="/roomListing">Room Listing page</a></li>
      <li><a href="/registration">Sign up</a></li>
      <li><a href="/login">Log in</a></li>
    </ul>
  </div>

</body>

</html>